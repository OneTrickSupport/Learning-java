<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="Myapp">

  <Appenders>
    <File name="MyFile" fileName="src/app.log">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>

  <Loggers>
    <Root level="error">
      <AppenderRef ref="MyFile"/>
    </Root>
  </Loggers>

</Configuration>